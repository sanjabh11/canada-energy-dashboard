# App (Vite) client env
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
VITE_USE_STREAMING_DATASETS=true
VITE_DEBUG_LOGS=false
# Optional: call functions via subdomain directly
VITE_SUPABASE_EDGE_BASE=

# Edge Function: llm (server-side)
# Operational toggles
LLM_ENABLED=true
LLM_CACHE_TTL_MIN=15
LLM_MAX_RPM=30
LLM_COST_PER_1K=0.003

# CORS: comma-separated list of allowed origins for browser requests to the LLM Edge Function
# For local dev, include your Vite origin; add your production domain when deploying
# Examples:
#   LLM_CORS_ALLOW_ORIGINS=*
#   LLM_CORS_ALLOW_ORIGINS=http://localhost:5173,https://energy.example.com
LLM_CORS_ALLOW_ORIGINS=*

# Supabase service credentials (server-side)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Gemini provider config (native Google recommended)
GEMINI_PROVIDER=google
# Fast/cheap for explain-chart
GEMINI_MODEL_EXPLAIN=gemini-2.5-flash
# Higher reasoning for analytics-insight
GEMINI_MODEL_ANALYTICS=gemini-2.5-pro
# Auth: prefer API key for quick start; for prod consider OAuth/Bearer
GEMINI_API_KEY=
# Optional if using OAuth
# GEMINI_OAUTH_BEARER=

# Optional: OpenAI-compatible gateway fallback (only if GEMINI_PROVIDER=openai)
# GEMINI_API_URL=
# GEMINI_API_KEY=

# ============================================================
# PHASE 1 LAUNCH: FEATURE FLAGS
# ============================================================
# Control which features are enabled in production vs development
# Most features are enabled by default based on their readiness rating
# Override in development to test deferred features

# WebSocket real-time collaboration (disabled by default, server not deployed)
VITE_ENABLE_WEBSOCKET=false

# Enable/disable LLM-powered insights
VITE_ENABLE_LLM=true

# Streaming data integration
VITE_ENABLE_LIVE_STREAMING=true

# Educational features (help system)
VITE_ENABLE_EDUCATIONAL_FEATURES=true

# Development-only overrides (uncomment to test deferred features locally)
# VITE_FEATURE_EMISSIONS_TRACKING=true
# VITE_FEATURE_MARKET_INTELLIGENCE=true
# VITE_FEATURE_COMMUNITY_PLANNING=true

# ============================================================
# AESO (ALBERTA) REAL-TIME DATA STREAMING
# ============================================================
# Enable AESO (Alberta Electric System Operator) real-time grid data
# Critical for tracking 10GW+ AI data centre interconnection queue

# Enable AESO streaming (set to true to fetch real-time Alberta grid data)
VITE_ENABLE_AESO_STREAMING=true

# AESO API Configuration (public API, no key required)
# Base URL for AESO Energy Trading System
AESO_API_BASE_URL=http://ets.aeso.ca/ets_web/ip/Market/Reports

# Cron job secret for scheduled ingestion (optional, for security)
# Generate a random secret: openssl rand -hex 32
CRON_SECRET=

# AESO data refresh interval (minutes)
# Recommended: 5 minutes for real-time tracking
# AESO updates data every 1-2 minutes, so 5-minute polling is reasonable
AESO_REFRESH_INTERVAL_MINUTES=5
# Whop SDK Configuration
VITE_WHOP_MODE=simulated   # 'live' | 'simulated'
VITE_WHOP_API_KEY=         # Your Whop API key (required for live mode)