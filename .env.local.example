# Real Data Integration Environment Variables
# Copy this file to .env.local and configure for your deployment

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
PROD=false

# Real Data Streaming Configuration
# Set to 'true' to enable live data streaming
VITE_ENABLE_LIVE_STREAMING=false

# Feature Flags for Gradual Rollout
# Set individual data sources to 'true' to enable them
VITE_ENABLE_IESO_STREAMING=true
VITE_ENABLE_AESO_STREAMING=false
VITE_ENABLE_WEATHER_STREAMING=false
VITE_ENABLE_HISTORICAL_DATA=false

# Fallback Configuration
VITE_ENABLE_FALLBACK_DATA=true
VITE_FALLBACK_MODE=enhanced

# Logging and Debugging
VITE_DEBUG_STREAMING=false
VITE_DEBUG_INTEGRATIONS=false

# Rate Limiting (requests per minute)
VITE_MAX_REQUESTS_PER_MINUTE=10

# Cache Configuration
VITE_CACHE_EXPIRY_MINUTES=5
VITE_CACHE_MAX_SIZE=100